{
	"compilerOptions": {
		"baseUrl": ".",
		"paths": {
			"@/*": ["./src/*"]
		},
		"target": "ES2020",
		"useDefineForClassFields": true,
		"lib": ["ES2020", "DOM", "DOM.Iterable"],
		"module": "ESNext",
		"skipLibCheck": true,
		"moduleResolution": "bundler",
		"allowImportingTsExtensions": true,
		"isolatedModules": true,
		"moduleDetection": "force",
		"noEmit": true,
		"jsx": "react-jsx",
		"strict": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"noFallthroughCasesInSwitch": true
	},
	"include": [
		"src",
		"../../packages/ui-react/src/lib/alchemy.ts",
		"../../packages/ui-react/src/lib/amount.ts",
		"../../packages/ui-react/src/lib/constants.ts",
		"../../packages/ui-react/src/lib/test-utils-isomorphic.ts",
		"../../packages/ui-react/src/lib/test-utils-node.ts",
		"../../packages/ui-react/src/components/attestations/attestation-badge.tsx",
		"../../packages/ui-react/src/components/attestations/attestation-card.tsx",
		"../../packages/ui-react/src/components/attestations/AttestationForm.tsx",
		"../../packages/ui-react/src/components/attestations/attestations.ts",
		"../../packages/ui-react/src/components/attestations/AttestationsTable.tsx",
		"../../packages/ui-react/src/components/attestations/SchemaBadge.tsx",
		"../../packages/ui-react/src/components/attestations/UploadAttestation.tsx",
		"../../packages/ui-react/src/components/signature/signature-verify-badge.tsx",, "../../packages/ui-react/src/components/transactions/TransactionTableWithDetails.tsx"
, "../../packages/ui-react/src/components/transactions/transaction-table.tsx"		"../../packages/ui-react/src/components/transactions/transaction-card-with-details.tsx",
		"../../packages/ui-react/src/components/transactions/transaction-card.tsx"
	]
}
